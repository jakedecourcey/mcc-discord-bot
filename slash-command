import requests

url = "https://discord.com/api/v8/applications/876326120826470411/commands"

json = {
    "name": "stats",
    "type": 1,
    "description": "Lookup MCC Stats",
    "options": [
        {
            "name": "gamertag",
            "description": "Defaults to Discord username",
            "type": 3
        }
    ]
}

headers = {"Authorization": ""}

r = requests.post(url, headers=headers, json=json)
